<h1 class="heading-large"><%= t('.find_your_case') %></h1>

<p class="lede">
  <%= t('.enter_details') %>
</p>

<% if flash[:notice] %>
  <h1 class='heading-large'>
  <%= h flash[:notice] %>
  </h1>
<% end %>

<%= GovukElementsErrorsHelper.error_summary @case_request,
  t('case_requests.could_not_find_case'), t('case_requests.check_details') %>

<%= form_for @case_request do |f| %>
  <%= f.text_field :case_reference %>
  <%= f.text_field :confirmation_code %>
  <%= f.submit(t('.find_case'), class: 'button') %>
<% end %>

<details class="find-case-help">
<summary><span class="summary"><%= t('.dont_know_details') %></span></summary>
  <div class="panel panel-border-narrow">
    <p>
      <%= t('.where_to_find_details') %>
    </p>
  </div>
</details>
