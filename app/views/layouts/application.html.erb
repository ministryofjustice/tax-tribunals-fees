<% content_for(:homepage_url) { "/" } %>
<% content_for(:page_title) { "GOV.UK - Pay your tax tribunal fees" } %>

<% content_for(:head) do %>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<% end %>

<% content_for(:inside_header) do %>
  <div class="header-proposition">
    <div class="content">
      <a href="/" id="proposition-name">Pay your tax tribunal fees</a>
    </div>
  </div>
<% end %>

<% content_for(:content) do %>
  <main id="content" role="main">
    <%= t('application.alpha_html') %>
    <div class="grid-row">
      <div class="column-two-thirds">
        <% if flash[:alert] %>
          <div class="error-summary">
            <%= flash[:alert] %>
          </div>
        <% end %>

        <%= yield %>
      </div>
      <div class="column-one-third">
				<aside class="govuk-related-items">
          <h2 class="heading-medium"><%= t('application.courts_sentencing') %></h2>
          <nav role="navigation">
            <ul class="font-xsmall">
              <li><a href="https://www.gov.uk/court-fees-what-they-are"><%= t('application.court_fees') %></a></li>
              <li><a href="https://www.gov.uk/tax-tribunal"><%= t('application.appeal') %></a></li>
            </ul>
          </nav>

          <h2 class="heading-medium"><%= t('application.elsewhere') %></h2>
          <nav role="navigation">
            <ul class="font-xsmall">
              <li><a href="https://www.gov.uk/tax-appeals"><%= t('application.disagree') %></a></li>
              <li><a href="https://www.gov.uk/government/publications/tax-chamber-tribunal-procedure-rules"><%= t('application.procedure') %></a></li>
            </ul>
          </nav>
        </aside>
		</div>
    </div>
  </main>
<% end %>

<%= render template: "layouts/govuk_template" %>
