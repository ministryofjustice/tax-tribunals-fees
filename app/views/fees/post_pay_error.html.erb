<h1 class="heading-large">
  <span class="heading-secondary"><%= @fee.case_reference %></span>
  <%= @fee.case_title %>
</h1>

<div class="error-summary">
  <h2 class="heading-medium heading-error"><%= t('.payment_not_taken') %></h2>
  <p>
    <%= flash[:error] %>.
  </p>
  <p class="font-xsmall">
    <%= t('.try_again_copy') %>
  </p>
  <p>
    <%= link_to t('.try_again'), pay_fee_path(@fee), class: 'button' %>
  </p>
</div>

<p>
  <%= t('.made_in_error') %>
</p>

<div class="notice notice-payment">
 <i class="icon icon-important">
   <span class="visuallyhidden"><%= t('.warning') %></span>
 </i>
 <strong class="bold-small">
   <%= t('.lose_the_right_to_appeal') %>
 </strong>
</div>

<p>
  <%= link_to t('fees.find_another_case'), new_case_request_path, class: 'link-back' %>
</p>
